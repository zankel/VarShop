@model List<Produto>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meus Produtos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>    
    <div id="listaProdutos" class="row">
        <h2 class="mt-3 text-center">Meus Produtos</h2>
         @if (Model.Count == 0)
        {
            <p class="text-center">Nenhum produto adicionado.</p>
        }
        else
        {
            @foreach (var produto in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@produto.ImageURL" alt="@produto.Descricao" style="width: 350px; height: 300px;">
                    <div class="card-body">
                        <h5 class="card-title">@produto.Nome</h5>                      
                        <p class="card-text">Preço: @produto.Preco</p>
                        <p class="card-text">@produto.Descricao</p>
                        <a class="btn btn-primary" href="@Url.Action("MeuProdutoByID", "Produto", new { id = produto.Id })">Editar</a>
                        <a class="btn btn-primary" href="@Url.Action("ExcluirProduto", "Vendedor", new { id = produto.Id })">Excluir</a>
                    </div>
                </div>
            </div>
            }
        }
    </div>
</body>
</html>