@model Produto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Adicionar Produto - VarShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <h2 class="mt-3" center>Adicionar Produto</h2>

    <form asp-controller="Vendedor" asp-action="SalvarProduto" method="post" enctype="multipart/form-data">
        <table class="table">
            <tbody>
                <tr>
                    <td><label for="nome">Nome do Produto:</label></td>
                    <td>
                        <div class="form-group">
                            <textarea class="form-control" id="nome" name="nome" rows="4"></textarea>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><label for="descricao">Descrição:</label></td>
                    <td>
                        <div class="form-group">
                            <textarea class="form-control" id="descricao" name="descricao" rows="4"></textarea>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><label for="preco">Preço:</label></td>
                    <td>
                        <div class="form-group">
                            <input type="number" class="form-control" id="preco" name="preco" step="0.01" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><label for="imagem">Imagem:</label></td>
                    <td>
                        <div class="form-group">
                            <input type="file" class="form-control-file" id="imagem" name="Imagem" />
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>

        <input type="hidden" name="vendedorId" value="@Model.VendedorId" />

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Adicionar Produto</button>
        </div>
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>