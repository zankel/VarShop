@model Vendedor

@{
    ViewData["Title"] = "VendedorCadastro";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css"> <!-- Substitua "styles.css" pelo caminho correto para o seu arquivo CSS, se necessário -->
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="login-page">
        <div class="login-container">
            <h2>Cadastro</h2>
            <form asp-action="CadastroVendedor" asp-controller="Account" method="post">
                <div id="vendedor" class="tabcontent">
                    <!-- Campos de registro para o vendedor dentro do formulário -->
                    <input type="text" asp-for="Razao_Social" placeholder="Razão Social" required>
                    <input type="text" asp-for="Nome_Fantasia" placeholder="Nome Fantasia" required>
                    <input type="text" asp-for="Email" placeholder="Email" required>
                    <input type="password" asp-for="Senha" placeholder="Senha" required>
                    <input type="text" asp-for="CNPJ" placeholder="CNPJ" required pattern="\d{2}\.\d{3}\.\d{3}/\d{4}-\d{2}">
                    <!-- Outros campos para o vendedor -->
                </div>

                <button type="submit" class="login-button">Cadastrar</button>
            </form>
        </div>
    </div>
</body>
</html>